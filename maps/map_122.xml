<?xml version="1.0" encoding="UTF-8"?>

<!-- 3 agents + more square in the grid (wider space between products and drop-off areas) -->

<map>
    <properties>
        <size>
            <width>11</width>
            <height>10</height>
        </size>
        <population>
            <agents>
                <agent id="1">
                    <start>
                        <coordinates x="0" y="7"/>
                    </start>
                    <pickup_list>
                        <product id="1"/>
                        <product id="3"/>
                        <product id="2"/>
                        <product id="7"/>
                        <product id="4"/>
                        <product id="6"/>
                    </pickup_list>
                </agent>
                <agent id="2">
                    <start>
                        <coordinates x="0" y="6"/>
                    </start>
                    <pickup_list>
                        <product id="2"/>
                        <product id="4"/>
                        <product id="1"/>
                        <product id="8"/>
                        <product id="6"/>
                        <product id="3"/>
                    </pickup_list>
                </agent>
                <agent id="3">
                    <start>
                        <coordinates x="0" y="5"/>
                    </start>
                    <pickup_list>
                        <product id="1"/>
                        <product id="8"/>
                        <product id="3"/>
                        <product id="6"/>
                        <product id="2"/>
                        <product id="7"/>
                    </pickup_list>
                </agent>
            </agents>
        </population>
    </properties>
    <topology>
        <!-- PRODUCTS -->
        <square>
            <coordinates x="4" y="8"/>
            <type>PRODUCT</type>
            <id>1</id>
        </square>
        <square>
            <coordinates x="6" y="8"/>
            <type>PRODUCT</type>
            <id>2</id>
        </square>
        <square>
            <coordinates x="8" y="8"/>
            <type>PRODUCT</type>
            <id>3</id>
        </square>
        <square>
            <coordinates x="10" y="8"/>
            <type>PRODUCT</type>
            <id>4</id>
        </square>
        <square>
            <coordinates x="3" y="7"/>
            <type>PRODUCT</type>
            <id>5</id>
        </square>
        <square>
            <coordinates x="3" y="5"/>
            <type>PRODUCT</type>
            <id>6</id>
        </square>
        <square>
            <coordinates x="8" y="4"/>
            <type>PRODUCT</type>
            <id>7</id>
        </square>
        <square>
            <coordinates x="10" y="4"/>
            <type>PRODUCT</type>
            <id>8</id>
        </square>

        <!-- DROP OFF POINTS -->
        <square>
            <coordinates x="3" y="1"/>
            <type>DROP_OFF_POINT</type>
            <id>1</id>
        </square>
        <square>
            <coordinates x="7" y="1"/>
            <type>DROP_OFF_POINT</type>
            <id>2</id>
        </square>

        <!-- REPAIR AREAS -->
        <square>
            <coordinates x="9" y="0"/>
            <type>REPAIR_POINT</type>
            <id>1</id>
        </square>

        <!-- NON WALKABLE AREAS -->
        <square>
            <coordinates x="3" y="4"/>
            <type>WALL</type>
        </square>
        <square>
            <coordinates x="3" y="8"/>
            <type>WALL</type>
        </square>
        <square>
            <coordinates x="7" y="8"/>
            <type>WALL</type>
        </square>
        <square>
            <coordinates x="7" y="4"/>
            <type>WALL</type>
        </square>
        <square>
            <coordinates x="8" y="1"/>
            <type>WALL</type>
        </square>
        <square>
            <coordinates x="4" y="1"/>
            <type>HUMAN_POINT</type>
        </square>
        <square>
            <coordinates x="6" y="1"/>
            <type>HUMAN_POINT</type>
        </square>
    </topology>
    <rules>
        <rule>
            <square x="7" y="1"/>
            <forbidden_accesses>
                <access>SOUTH</access>
                <access>EAST</access>
                <access>WEST</access>
            </forbidden_accesses>
            <forbidden_exits>
                <exit>NORTH</exit>
                <exit>EAST</exit>
                <exit>WEST</exit>
            </forbidden_exits>
        </rule>
        <rule>
            <square x="3" y="1"/>
            <forbidden_accesses>
                <access>SOUTH</access>
                <access>EAST</access>
                <access>WEST</access>
            </forbidden_accesses>
            <forbidden_exits>
                <exit>NORTH</exit>
                <exit>EAST</exit>
                <exit>WEST</exit>
            </forbidden_exits>
        </rule>
    </rules>
</map>